---
import { Icon } from 'astro-icon/components'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="flex h-20 w-full items-center justify-center">
			<div class="flex w-full items-center justify-between px-5 lg:hidden">
				<span class="bg-[#757575] px-[52px] py-5 text-xs leading-[14px] text-white">ロゴ</span>
				<Icon name="hamburger" />
			</div>

			<div class="hidden w-full items-center justify-evenly lg:flex">
				<div class="flex items-center gap-4">
					<Icon class="aspect-[100/24] h-auto w-[192px]" name="logo" />
				</div>
				<div class="flex items-center gap-4">
					<div>
						<span>スタジオ紹介</span>
						<span>STUDIO</span>
					</div>
					<div>
						<span>スタジオ紹介</span>
						<span>STUDIO</span>
					</div>
					<div>
						<span>スタジオ紹介</span>
						<span>STUDIO</span>
					</div>
					<div>
						<span>スタジオ紹介</span>
						<span>STUDIO</span>
					</div>
				</div>
			</div>
		</header>
		<main>
			<slot />
		</main>
		<footer class="flex flex-col items-center rounded-t-2xl bg-peach pt-16">
			<Icon class={'w-[178px] h-[169px]'} name="logo-footer" />
			<div class="mt-7 flex flex-col gap-[10px] text-base leading-[19px] md:mt-10 md:gap-[14px]">
				<span>富山県富山市小泉町44</span>
				<span>営業時間 9：00～18：00</span>
				<span>定休日 水曜日</span>
			</div>
			<div class="mt-14 md:mt-16"></div>
			<a
				href={'#'}
				class="mt-3 inline-flex h-[58px] w-full items-center justify-center self-end text-nowrap rounded-md bg-lime px-8 text-base leading-[21px] text-white sm:max-w-max"
				><span class="font-semibold">LINE</span>{' '}<span>で問い合わせる</span></a
			>
		</footer>
	</body>
</html>
