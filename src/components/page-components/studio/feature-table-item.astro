---
export interface Props {
	title: string
	price: string | number | 'ok'
	inclPriceBrackets?: boolean
}

const { title, price, inclPriceBrackets = true } = Astro.props
---

<div
	class="flex w-full flex-col gap-4 border-t border-divider px-[10px] py-4 last:border-b md:flex-row md:items-center md:justify-between md:px-[25px] md:py-6"
>
	<p class="md: text-base font-bold leading-[19px]">{title}</p>
	<div class="ml-auto flex items-baseline">
		{
			price === 'ok' ? (
				<span class="text-base leading-[19px]">持参OK</span>
			) : (
				<>
					<span class="english mr-2 text-base font-medium leading-[19px]">¥</span>
					<b class="english mr-[6px] text-[26px] font-medium leading-[31px]">{price}</b>
					{inclPriceBrackets ? <p class="text-base font-medium leading-[19px]">(税込)</p> : null}
				</>
			)
		}
	</div>
</div>
