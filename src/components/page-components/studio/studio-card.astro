---
export interface Props {
	title: string
	body: string
	image: string
}

const { image, title, body } = Astro.props
---

<div class="flex flex-col items-center md:items-start">
	<img class="aspect-[90/100] h-auto w-full object-cover" src={image} />
	<p class="mx-auto mt-[30px] text-[24px] leading-[44px]">{title}</p>
	<p class="mt-6 px-[10px] text-base leading-[37px]">
		{body}
	</p>
</div>
