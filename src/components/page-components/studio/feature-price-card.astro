---
export interface Props {
	title: string
	prices: Array<{
		points?: number
		pretext?: string
		price: number | string
	}>
}

const { prices, title } = Astro.props
---

<div
	class="flex w-full flex-col items-center gap-4 border-t border-divider py-5 last:border-b md:flex-row md:gap-3"
>
	<img
		class="aspect-[176/100] h-auto w-full rounded-md object-cover md:aspect-[148/100] md:max-w-[250px]"
		src="./menu.jpg"
	/>
	<div class="flex w-full flex-col items-center gap-[26px] md:flex-row md:justify-between">
		<p class="text-base font-bold leading-[19px]">{title}</p>
		<div class="flex flex-col gap-[18px] md:gap-6">
			{
				prices.map(({ price, pretext, points }) => {
					return (
						<div class="flex items-center">
							{points ? <p class="text-base leading-[19px]">{points}P</p> : null}

							{pretext ? <p class="text-base leading-[19px]">{pretext}</p> : null}

							<div class="ml-3 flex items-baseline md:ml-8">
								<span class="mr-2 text-base font-medium leading-[19px] english">¥</span>
								<b class="mr-[6px] text-[26px] font-medium leading-[31px] english">{price}</b>
								<p class="text-base font-medium leading-[19px]">(税込)</p>
							</div>
						</div>
					)
				})
			}
		</div>
	</div>
</div>
