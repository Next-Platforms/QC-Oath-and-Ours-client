---
export interface Props {
	body: string
	author: string
}

const { author, body } = Astro.props
---

<div class="flex w-full max-w-[400px] shrink-0 flex-col rounded-xl bg-white p-5">
	<img class="h-[240px] w-full" src="/hero.jpg" />
	<p class="mt-[26px] text-base leading-[33px] md:mt-7">
		{body}
	</p>
	<span class="ml-auto mt-[26px] inline-block max-w-max text-base"
		>洋装スタジオプラン
		{author}
	</span>
</div>
