---
export interface Props {
	title: string
	prices: Array<{
		points?: number
		price: number | string
	}>
}

const { prices, title } = Astro.props
---

<div
	class="flex w-full flex-col items-center gap-4 border-t border-black py-5 last:border-b md:flex-row md:gap-3"
>
	<img
		class="aspect-[176/100] h-auto w-full rounded-md md:aspect-[148/100] md:max-w-[250px]"
		src="./hero.jpg"
	/>
	<div class="flex w-full flex-col items-center gap-[26px] md:flex-row md:justify-between">
		<p class="text-base leading-[19px]">{title}</p>
		<div class="flex flex-col gap-[18px] md:gap-6">
			{
				prices.map(({ price, points }) => {
					return (
						<div class="flex items-center">
							{points ? <p class="text-base leading-[19px]">20P</p> : null}

							<div class="ml-3 flex items-baseline md:ml-8">
								<span class="text-base font-medium">¥</span>
								<b class="text-4xl font-medium">{price}</b>
								<p class="text-base font-medium">(税込)</p>
							</div>
						</div>
					)
				})
			}
		</div>
	</div>
</div>
