---
export interface Props {
	title: string
	price: string | number
}

const { title, price } = Astro.props
---

<div
	class="flex w-full flex-col gap-4 border-t border-black py-4 last:border-b md:flex-row md:items-center md:justify-between md:py-6"
>
	<p class="md: text-base leading-[19px]">{title}</p>
	<div class="ml-auto flex items-baseline">
		<span class="text-base font-medium">¥</span>
		<b class="text-4xl font-medium">{price}</b>
		<p class="text-base font-medium">(税込)</p>
	</div>
</div>
