---
export interface Props {
	title: string
	price: string | number
}

const { title, price } = Astro.props
---

<div
	class="border-divider flex w-full flex-col gap-4 border-t py-4 last:border-b md:flex-row md:items-center md:justify-between md:py-6"
>
	<p class="md: text-base leading-[19px]">{title}</p>
	<div class="ml-auto flex items-baseline">
		<span class="english text-base font-medium leading-[19px]">¥</span>
		<b class="english text-4xl font-medium leading-[43px]">{price}</b>
		<p class="text-base font-medium leading-[19px]">(税込)</p>
	</div>
</div>
