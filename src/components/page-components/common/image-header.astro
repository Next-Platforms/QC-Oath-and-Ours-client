---
import { cn } from '../../../lib/utils'

export interface Props {
	title: string
	subtitle: string
	image?: string
	mobileImage?: string
	alt: string

	imgClassName?: string
}

const { title, mobileImage, imgClassName, image, subtitle } = Astro.props
---

<div class="flex flex-col items-center bg-peach pb-[60px] md:pb-[132px]">
	<div class="relative w-full">
		<img
			src={image}
			class={cn(
				'aspect-[3/4] h-auto w-full rounded-b-[50px] object-cover object-top md:aspect-[32/10] md:rounded-b-[250px]',
				imgClassName
			)}
			srcset={mobileImage ? `${mobileImage} 768w, ${image} 1024w` : undefined}
			sizes="(max-width: 767px) 100vw, 1024px"
		/>
		<b
			class="english absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-[45%] text-[55px] font-bold leading-[96px] text-transparent brightness-75 md:text-[93px] md:leading-[162px]"
			style={{
				background: `url(${image})`,
				backgroundClip: 'text',
				backgroundSize: 'cover',
				backgroundPosition: 'bottom'
			}}>{title}</b
		>
	</div>
	<div
		class="mt-8 flex h-[69px] items-center justify-center bg-white px-10 text-[35px] leading-[42px] md:mt-[88px] md:h-[86px] md:px-12 md:text-[40px] md:leading-[48px]"
	>
		{subtitle}
	</div>
</div>
