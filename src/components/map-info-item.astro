---
export interface Props {
	title: string
	items: string[]
}

const { title, items } = Astro.props
---

<div
	class="flex flex-col gap-6 border-t border-black px-5 py-4 last:border-b md:flex-row md:gap-[90px] md:px-[30px] md:py-[18px]"
>
	<div class="text-base leading-[19px]">{title}</div>
	<div class="flex flex-col gap-[14px]">
		{
			items.map((item) => {
				return <span class="text-base leading-[19px]">{item}</span>
			})
		}
		<span>9：00～18：00</span>
	</div>
</div>
